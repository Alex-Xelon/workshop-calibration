{
    "name": "Marimo Codespace",
    "image": "mcr.microsoft.com/devcontainers/python:3.13",
    "customizations": {
      "vscode": {
        "extensions": [
          "marimo-ai.marimo-vscode",
          "ms-python.python",
          "ms-toolsai.jupyter"
        ]
      }
    },
    "portsAttributes": {
      "2718": {
        "label": "Marimo",
        "onAutoForward": "openBrowser"
      }
    },
    "postStartCommand": "chmod +x ./start-marimo.sh && ./start-marimo.sh",
    "remoteUser": "vscode"
  }
